<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Goulash.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="gelat0widdit.png"
                MaximumHeightRequest="100"
                Opacity="2"
                VerticalOptions="End"
                />
            <Label
                Text="Goulash"
                TextColor="#9fadc6"
                HeightRequest="100"
                FontSize="40"
                HorizontalOptions="Center"
                />
            <Button
                Text="Student View"
                MaximumWidthRequest="400"
                Clicked="StudentClicked"
                />
            <Button
                Text="Instructor View"
                MaximumWidthRequest="400"
                Clicked="InstructorClicked"
                ></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
