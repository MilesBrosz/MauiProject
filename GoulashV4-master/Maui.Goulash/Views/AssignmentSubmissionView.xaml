<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Goulash.Views.AssignmentSubmissionView"
             Title="AssignmentSubmissionView"
             NavigatedTo="OnArriving"
             NavigatedFrom="OnLeaving">
    <VerticalStackLayout>
        <Label 
            Text="Submission"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding Path=Content, Mode=TwoWay}"></Entry>

        <Button Text="Submit"
                Clicked="SubmitClick" />
    </VerticalStackLayout>
</ContentPage>
