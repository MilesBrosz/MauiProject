<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Goulash.Views.AssignmentDetailView"
             Title="AssignmentDetailView"
             NavigatedFrom="OnLeaving"
             NavigatedTo="OnArriving"
             >
    <VerticalStackLayout>
        <Label 
            Text="Name"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding Path=AssignmentName, Mode=TwoWay}"></Entry>

        <Label 
            Text="Description"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding Path=AssignmentDescription, Mode=TwoWay}"></Entry>

        <Button Text="Ok"
                Clicked="OkClick" />
        <Button Text="Back"
                Clicked="BackClick" />
    </VerticalStackLayout>
</ContentPage>
